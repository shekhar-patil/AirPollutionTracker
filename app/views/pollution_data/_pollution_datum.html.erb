<tr id="<%= dom_id pollution_datum %>">
  <td class="relative py-4 pr-3 text-sm font-medium text-gray-900">
    <%= pollution_datum.index %>
    <div class="absolute bottom-0 right-full h-px w-screen bg-gray-100"></div>
    <div class="absolute bottom-0 left-0 h-px w-screen bg-gray-100"></div>
  </td>
  <td class="px-3 py-4 text-sm text-gray-500"><%= pollution_datum.co %></td>
  <td class="hidden px-3 py-4 text-sm text-gray-500 sm:table-cell"><%= pollution_datum.no %></td>
  <td class="hidden px-3 py-4 text-sm text-gray-500 md:table-cell"><%= pollution_datum.no2 %></td>
  <td class="px-3 py-4 text-sm text-gray-500"><%= pollution_datum.o3 %></td>
  <td class="px-3 py-4 text-sm text-gray-500"><%= pollution_datum.so2 %></td>
  <td class="px-3 py-4 text-sm text-gray-500"><%= pollution_datum.pm2_5 %></td>
  <td class="px-3 py-4 text-sm text-gray-500"><%= pollution_datum.pm10 %></td>
  <td class="px-3 py-4 text-sm text-gray-500"><%= pollution_datum.nh3 %></td>
  <td class="px-3 py-4 text-sm text-gray-500"><%= Time.at(pollution_datum.dt) %></td>
</tr>
